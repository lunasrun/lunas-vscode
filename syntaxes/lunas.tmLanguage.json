{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lunas",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "match": "@(input|use)",
      "name": "keyword.control.lunas"
    },
    {
      "match": "\\b(?i:string)\\b",
      "name": "storage.type.string.lunas"
    },
    {
      "match": "\"[^\"]*\"",
      "name": "string.quoted.double.lunas"
    },
    {
      "match": "'[^']*'",
      "name": "string.quoted.double.lunas"
    },
    {
      "begin": "(^html:\\s*$)",
      "beginCaptures": {
        "1": {
          "name": "meta.tag.lunas"
        }
      },
      "end": "^(?!\\s)",
      "patterns": [
        {
          "include": "text.html.lunas"
        },
        {
          "begin": "\\$\\{",
          "end": "\\}",
          "contentName": "source.ts",
          "patterns": [
            {
              "include": "source.ts"
            }
          ]
        }
      ]
    },
    {
      "begin": "^html:\\s*$",
      "end": "^(?!\\s)",
      "name": "markup.raw.block.lunas",
      "patterns": [
        {
          "include": "text.html.lunas"
        }
      ]
    },
    {
      "begin": "^script:\\s*$",
      "end": "^(?!\\s)",
      "name": "source.ts.lunas",
      "patterns": [
        {
          "include": "source.ts"
        }
      ]
    },
    {
      "begin": "^style:\\s*$",
      "end": "^(?!\\s)",
      "name": "source.css.lunas",
      "patterns": [
        {
          "include": "source.css"
        }
      ]
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lunas",
          "match": "\\b(if|while|for|return)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.lunas",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.lunas",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.lunas"
}
